# GitHub API 配置
GITHUB_TOKEN=your_github_token

# OpenAI API 配置
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo

# LLM 并行处理配置
LLM_MAX_CONCURRENT=25         # 最大并发请求数
LLM_BATCH_SIZE=50             # 批处理大小
LLM_REQUEST_TIMEOUT=120       # 请求超时时间(秒)
LLM_RETRY_DELAY=2             # 重试延迟时间(秒)

# RAG 服务配置
RAG_BASE_URL=your_rag_url
RAG_BATCH_SIZE=100            # RAG 批次上传大小（0 表示一次性上传所有文档）  

# Web API 配置
API_BASE_URL=http://127.0.0.1:8000

# README API 配置
README_API_BASE_URL=http://127.0.0.1:8001

# 后端接口配置
APP_HOST=0.0.0.0
APP_PORT=8000

# 前端配置
VITE_PORT=3000                    # 前端开发服务器端口

# 本地存储配置
LOCAL_REPO_PATH=./data/repos          # Git仓库存储路径
RESULTS_PATH=./data/results           # 分析结果存储路径
VECTORSTORE_PATH=./data/vectorstores  # 向量数据库存储路径

# 数据库配置
DB_DIALECT=mysql+pymysql      # 指定 SQLAlchemy 使用的数据库“方言+驱动”
DB_HOST=127.0.0.1             # 数据库服务器地址
DB_PORT=3306                  # 数据库服务器端口
DB_NAME=code_analysis         # 数据库名称
DB_USER=root                  # 数据库用户名
DB_PASSWORD=your_password     # 数据库密码
DB_PARAMS=charset=utf8mb4     # 数据库连接参数
DB_ECHO=0                     # 开启 SQLAlchemy echo
DB_POOL_SIZE=5                # 连接池大小
DB_MAX_OVERFLOW=10            # 超出连接池的额外连接数

